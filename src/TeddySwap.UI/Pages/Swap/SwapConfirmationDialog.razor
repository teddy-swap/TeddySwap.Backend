<MudDialog Class="w-[92%] max-w-[496px] pb-4" ClassContent="@(_isConfirmed ? "hidden" : "block")">
    <TitleContent>
        <div class="flex items-center justify-between">
            <MudText Class="!text-[16px] md:!text-[20px]" Typo="Typo.h6">Confirm Swap</MudText>
            <MudIconButton
                OnClick="@(() => MudDialog?.Close())"
                Class="justify-self-end block"
                Icon="@Icons.Material.Filled.Close"
                aria-label="close"
            >
            </MudIconButton>
        </div>
    </TitleContent>
    <DialogContent>
        <MudPaper Class="flex justify-between items-center p-4 ">
            <div class="font-semibold text-[16px]">@AppStateService.FromValue.ToString("#,##0.00")</div>
            <div class="confirm-swap-dialog-token-chip">
                <TokenChip Disabled="true" CurrentlySelectedToken="AppStateService.FromCurrentlySelectedToken" />
            </div>
        </MudPaper>

        <MudPaper Class="flex justify-between items-center p-4 mt-2">
            <div class="font-semibold text-[16px]">@AppStateService.ToValue.ToString("#,##0.00")</div>
            <div class="confirm-swap-dialog-token-chip">
                <TokenChip Disabled="true" CurrentlySelectedToken="AppStateService.ToCurrentlySelectedToken" />
            </div>
        </MudPaper>

        <MudPaper Class="flex justify-between items-center p-4 mt-6">
            <MudList Class="w-full" DisableGutters>
                <MudListItem Class="flex justify-between items-center py-0">
                    <div class="flex justify-between items-center text-[12px]">
                        <div>Slippage tolerance:</div>
                        <div class="font-semibold">@AppStateService.SlippageToleranceValue%</div>
                    </div>
                </MudListItem>
                <MudListItem Class="flex justify-between items-center py-0">
                    <div class="flex justify-between items-center text-[12px]">
                        <div>Honey:</div>
                        <div class="font-semibold">@AppStateService.HoneyValue</div>
                    </div>
                </MudListItem>
                <MudListItem Class="flex justify-between items-center py-0">
                    <div class="flex justify-between items-center text-[12px]">
                        <div>Estimated output:</div>
                        <div class="font-semibold">15.725234 - 31.450468 @AppStateService?.ToCurrentlySelectedToken?.Name</div>
                    </div>
                </MudListItem>
                <MudListItem Class="flex justify-between items-center py-0">
                    <div class="flex justify-between items-center text-[12px]">
                        <div>Refundable deposit:</div>
                        <div class="font-semibold">2 ADA</div>
                    </div>
                </MudListItem>
                <MudListItem Class="flex justify-between items-center py-0">
                    <div class="flex justify-between items-center text-[12px]">
                        <div class="flex">
                            <div>Total Fees</div>
                            <MudTooltip Placement="Placement.Right" Class="max-w-[200px] text-left">
                                <ChildContent>
                                    <MudIcon Class="w-[14px] h-[14px] ml-1" Icon="@IconsExtension.OutlinedQuestionMark" Size="Size.Small" />
                                </ChildContent>
                                <TooltipContent>
                                    <MudText Typo="Typo.caption">
                                        <div>Transaction fee: 1 ADA</div>
                                        <div>Execution fee: 2 - 4 ADA</div>
                                    </MudText>
                                </TooltipContent>
                            </MudTooltip>
                            <span>:</span>
                        </div>
                        <div class="font-semibold">3-5 ADA</div>
                    </div>
                </MudListItem>
            </MudList>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <div class="@((_isConfirmed ? "block visible" : "hidden invisible") + " flex flex-col !items-center w-full gap-3")">
            <div class="w-full flex justify-center">
                <MudProgressCircular Color="Color.Primary" Style="height:70px;width:70px;" Indeterminate="true" />
            </div>
            <MudText Class="font-semibold !text-[16px] md:text-[20px]">Waiting for confirmation</MudText>
            <MudText Class="text-[12px] md:text-[14px] text-center">
                Swapping
                <span>@AppStateService?.FromValue.ToString("#,##0.00") @AppStateService?.FromCurrentlySelectedToken?.Name</span> and 
                <span>@AppStateService?.ToValue.ToString("#,##0.00") @AppStateService?.ToCurrentlySelectedToken?.Name</span>
            </MudText>
            <MudText Class="text-[12px] md:text-[14px] text-[var(--mud-palette-text-secondary)]">Confirm this transaction in your wallet.</MudText>
        </div>

        <div class="@((_isConfirmed ? "hidden" : "block") + " px-[16px] w-full mt-2")">
            <MudButton
                FullWidth
                OnClick="HandleConfirmationBtnClicked"
                Class="text-[20px] py-[6px] font-medium normal-case"
                Variant="Variant.Filled"
                Color="Color.Primary"
            >
                Confirm Swap
            </MudButton>
        </div>
    </DialogActions>
</MudDialog>
