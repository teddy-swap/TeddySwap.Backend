@using TeddySwap.UI.Services;
@inject IconsService IconsService

<MudDialog Class="w-[92%] max-w-[496px] pb-4" ClassActions="!px-[24px]">
     <TitleContent>
        <div class="flex items-center justify-between">
            <MudText Typo="Typo.h6">Confirm Remove Liquidity</MudText>
            <MudIconButton
                OnClick="@(() => MudDialog?.Close())"
                Class="justify-self-end block"
                Icon="@Icons.Material.Filled.Close"
                aria-label="close"
            >
            </MudIconButton>
        </div>
    </TitleContent>
    <DialogContent>
        <div class="flex flex-col gap-1">
            <MudText Typo="Typo.h3" Class="text-[14px] font-semibold">Pooled assets</MudText>
            <div class="flex flex-col gap-2">
                <MudPaper Class="flex justify-between items-center p-4 ">
                    <div class="font-semibold text-[16px]">486.08 (~349.68 ADA)</div>
                    <div class="confirm-swap-dialog-token-chip">
                        <TokenChip Disabled="true" CurrentlySelectedToken="TokenOne" />
                    </div>
                </MudPaper>
                <MudPaper Class="flex justify-between items-center p-4 ">
                    <div class="font-semibold text-[16px]">176.08 (~659.68 ADA)</div>
                    <div class="confirm-swap-dialog-token-chip">
                        <TokenChip Disabled="true" CurrentlySelectedToken="TokenTwo" />
                    </div>
                </MudPaper>
            </div>
        </div>
        <div class="mt-6 flex flex-col gap-1">
            <MudText Typo="Typo.h3" Class="text-[14px] font-semibold">Fees</MudText>
            <MudPaper>
                <MudList Class="w-full">
                    <MudListItem Class="flex justify-between items-center py-0">
                        <div class="flex justify-between items-center text-[12px]">
                            <div>Refundable deposit:</div>
                            <div class="font-semibold">2 ADA</div>
                        </div>
                    </MudListItem>
                    <MudListItem Class="flex justify-between items-center py-0">
                    <div class="flex justify-between items-center text-[12px]">
                        <div class="flex">
                            <div>Total Fees</div>
                            <MudTooltip Placement="Placement.Right" Class="max-w-[200px] text-left">
                                <ChildContent>
                                    <MudIcon Class="w-[14px] h-[14px] ml-1" Icon="@IconsService.OutlinedQuestionMark" Size="Size.Small" />
                                </ChildContent>
                                <TooltipContent>
                                    <MudText Typo="Typo.caption">
                                        <div>Transaction fee: 1 ADA</div>
                                        <div>Execution fee: 2 ADA</div>
                                    </MudText>
                                </TooltipContent>
                            </MudTooltip>
                            <span>:</span>
                        </div>
                        <div class="font-semibold">3 ADA</div>
                    </div>
                </MudListItem>
                </MudList>
            </MudPaper>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton
            FullWidth
            Class="text-[20px] py-[6px] font-medium normal-case"
            Variant="Variant.Filled"
            Color="Color.Primary"
        >
            Confirm Remove Liquidity
        </MudButton>
    </DialogActions>
</MudDialog>
